{
    "exclude": ["dist", ".parcel-cache", "node_modules", "packages"],
    "compilerOptions": {
      "outDir": "./dist/",
      "target": "ES2021",
      "baseUrl": ".",
      "typeRoots": ["./node_modules/@types", "./type-definitions"],
      "moduleResolution": "node",
      "module": "commonjs",
      "resolveJsonModule": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
  }
  