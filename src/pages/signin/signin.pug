extends ../template.pug
include ../../components/button/button.pug
include ../../components/input/input.pug

block templateVar 
  - const pageTitle = "Регистрация"

block content
    .page-sign-up.block-center
        .sign-up_form
            h1.sign-up_form__title Регистрация
            form.sign-up_form__inputs
                +input("text","email", "Почта").email
                +input("text", "login", "Логин").login
                +input("text", "first_name", "Имя").first_name
                +input("text", "second_name", "Фамилия").second_name
                +input("text", "phone", "Телефон").phone
                +input("text", "password", "Пароль").password
                +input("text", "check-password", "Пароль(ещё раз)").check-password
            .sign-up_form__buttons
                +button('submit', 'Зарегистрироваться').sign-up_form__btn
                a(href="/src/pages/sign-up/").sign-up_form__link-login
                a.sign-up_form__link-signin(href="#") Войти
